if theme.logo
  a.centeralias(href= config.root)
    img.alias(src= theme.logo, alt= config.title, title= config.title)
h1.center
  a(href= config.root, alt= config.title, title= config.title, itemprop='headline')= config.title
p.center(itemprop='description')!= config.description
nav.center(itemscope, itemtype='https://schema.org/SiteNavigationElement')
  ul
    each url, label in theme.menu
      li(itemprop='name')
        a(href= url, alt= label, title= label, itemprop='url')= label
